<%- model_class = Geography -%>
<div class="page-header">
  <h1><%=t '.title', :default => Geography %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:neighborhood) %></th>


    </tr>
  </thead>
  <tbody>
    <% @geographies.each do |geography| %>
      <tr>

        <td><%= geography.neighborhood %></td>

        <td>
          <%= link_to geography_path(geography), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
