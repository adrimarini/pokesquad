<%- model_class = Geography -%>

<div class="page-header">
  <h1><%= @geography.neighborhood %></h1>
</div>
<dt class="label label-default"><%= model_class.human_attribute_name(:neighborhood) %></dt>
<dd><pre class="prettyprint"><%= @geography.neighborhood %></pre></dd>




<%= render '/posts/form' %>


<div class="feed">

  <% @geography.posts.each do |post| %>
  <div class="jumbotron">
    <p> You are part of team: <%= post.user.username %></p>
    <p> Meeting Time: <%= post.meet_time %> </p>
    <p> Meeting Location: <%= post.location %></p>
    <p>  <%= post.content %> </p>
</div>
  <% end %>


</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              geographies_path, :class => 'btn btn-default'  %>
</div>
