<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :meet_time %>
    <%= f.input :location %>
    <%= f.input :content %>
    <%= f.association :user %>
    <%= f.association :geography %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
