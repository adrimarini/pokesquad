<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Meet time</th>
      <th>Location</th>
      <th>Content</th>
      <th>User</th>
      <th>Geography</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.meet_time %></td>
        <td><%= post.location %></td>
        <td><%= post.content %></td>
        <td><%= post.user %></td>
        <td><%= post.geography %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
